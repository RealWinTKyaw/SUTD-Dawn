    <ImageButton
        android:id="@+id/backToPage"
        android:layout_width="@dimen/button"
        android:layout_height="@dimen/button"
        android:layout_alignParentRight="false"
        android:background="@null"
        android:contentDescription="chat"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Welcome to"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SUTD Dawn "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_divider2x"
                android:text="Letâ€™s start by registering your Student ID and email!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/browser_actions_title_color"
                android:textSize="20dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_divider2x"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@color/light_gray"
                    android:gravity="left"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="@dimen/listitem_vertical_padding" />

                <EditText
                    android:id="@+id/studentEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginTop="30dp"
                    android:background="@color/light_gray"
                    android:gravity="left"
                    android:hint="Student email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/vertical_divider" />

                <EditText
                    android:id="@+id/StudentID"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginTop="30dp"
                    android:background="@color/light_gray"
                    android:gravity="left"
                    android:hint="Student ID"
                    android:inputType="number"
                    android:padding="@dimen/vertical_divider" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginTop="30dp"
                    android:background="@color/light_gray"
                    android:gravity="left"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/listitem_vertical_padding" />

                <Button
                    android:id="@+id/charaButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/create" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


